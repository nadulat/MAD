<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndSignUp.WelcomePage">

    <ImageView
        android:id="@+id/wel_background"
        android:layout_width="@dimen/welBackgroundWidth"
        android:layout_height="@dimen/welBackgroundHeight"
        android:layout_marginStart="@dimen/welBackgroundMarginStart"
        android:layout_marginEnd="@dimen/welBackgroundMarginEnd"
        android:layout_marginBottom="@dimen/welBackgroundMargineBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cover_3"
        android:contentDescription="@string/welcome_background" />

    <ImageView
        android:id="@+id/wel_Img"
        android:layout_width="178dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="@+id/wel_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login_3"
        android:contentDescription="@string/welcome_image" />

    <TextView
        android:id="@+id/wel_txt1"
        android:layout_width="@dimen/welcomeTxtWidth"
        android:layout_height="@dimen/welcomeTxtHeight"
        android:layout_marginTop="@dimen/welcomeTxtMargineTop"
        android:text="@string/welcomeTxt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/welcomeTxt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wel_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sloganTxtMargineTop"
        android:text="@string/sloganTxt"
        android:textColor="@color/white"
        android:textSize="@dimen/sloganTxtSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wel_txt1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="@dimen/btnWelWidth"
        android:layout_height="@dimen/btnWelHeight"
        android:layout_marginTop="@dimen/btnWelLoginMarginTop"
        android:background="@drawable/background_btn"
        android:text="@string/btnWelLogin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wel_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup"
        android:layout_width="@dimen/btnWelWidth"
        android:layout_height="@dimen/btnWelHeight"
        android:layout_marginTop="@dimen/btnWelSignupMarginTop"
        android:background="@drawable/background_btn"
        android:text="@string/sign_up"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

</androidx.constraintlayout.widget.ConstraintLayout>